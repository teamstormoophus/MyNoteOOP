<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EFC1AD"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#EAB9A3"
        android:text="Thêm Công Việc"
        android:textAlignment="center"
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/title_plain_text"
        android:inputType="textMultiLine|textCapSentences"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EADF7D"
        android:contentDescription="@string/delete_note"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageButton
        android:id="@+id/create_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4FAB8"
        android:contentDescription="@string/delete_note"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:srcCompat="@android:drawable/ic_input_add" />
</LinearLayout>